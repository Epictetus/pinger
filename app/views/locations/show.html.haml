%p
  = link_to 'Back', root_path
  |
  = link_to 'Add alert', new_location_alert_path(location)

#location
  - present location do
    #info
      %table
        %tbody
          %tr
            %th Title
            %td= title
          %tr
            %th URL
            %td= url
          %tr
            %th HTTP method
            %td= http_method
          %tr
            %th Seconds
            %td= seconds
    #pings
      %h2 Pings
      %p= "Next ping in #{next_ping}."
      = render_pings
      = paginate paginated_pings